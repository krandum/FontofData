<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>email</th>
      <th>faction</th>
      <th>admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.faction_id %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show Profile', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_registration(user) %></td>
        <td><%= link_to 'Delete User', user_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>